@startuml PlantDomain
package "Plant Catalog Domain" {
  class Plant <<Entity>> {
    +plantId: UUID
    +latinName: String
    +commonName: String
    +category: String
    +sunExposure: String
    +waterNeed: String
  }

  class PlantInfoService <<DomainService>> {
    +lookup(plantId: UUID): Plant
    +searchByCriteria(sun: String, water: String, category: String): List
  }

  PlantInfoService ..> Plant
}
@enduml
